{
  "name": "typescript-node-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "seed": "ts-node ./src/infra/seeds/",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint:all": "yarn lint && yarn tscCheck",
    "lint:fx": "eslint src/**/*.ts --fix",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/index.js",
    "server": "ts-node src/server.ts",
    "postinstall": "npm run tsc",
    "tsc": "tsc",
    "tscCheck": "tsc --noEmit",
    "test": "mocha --check-leaks -r tsconfig-paths/register -r ts-node/register  'src/**/*.spec.ts' 'e2e/**/*.spec.ts' --file 'e2e/root_hooks.ts' --timeout 90000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koji/typescript-node-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/koji/typescript-node-boilerplate/issues"
  },
  "homepage": "https://github.com/koji/typescript-node-boilerplate#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.16",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.8",
    "@types/express-fileupload": "^1.1.6",
    "@types/mocha": "^8.2.2",
    "@types/mongoose": "^5.10.4",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.6.2",
    "@types/nodemailer": "^6.4.1",
    "@types/nodemailer-express-handlebars": "^4.0.0",
    "@types/validatorjs": "^3.15.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "mocha": "^8.3.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "testcontainers": "^7.7.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.61",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.ts": "tsc --noEmit",
    "*.{js,ts,json}": "prettier --write"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/jsonwebtoken": "^8.5.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongo-seeding": "^3.6.0",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.0",
    "nodemailer-express-handlebars": "^4.0.0",
    "typescript": "^4.0.2",
    "validatorjs": "^3.22.1"
  }
}
